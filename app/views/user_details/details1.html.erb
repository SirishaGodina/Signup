<div class="container h-100">
<div class="row h-100 justify-content-center align-items-center">
<div class="col-10 col-md-8 col-lg-6">
<h2> Create Account- Form-1</h2>
<div class="alert alert-warning">
<%= notice%>
</div>

<%=form_tag '/user_details/details1', method: :get do%>
 
 <div class="form-group">
  
  <%= text_field_tag :first_name, nil, :required => true, :placeholder => 'first name' %>
 </div>
 <div class="form-group">
 
  <%= text_field_tag :last_name, nil, :required => true, :placeholder => 'last name'%>
 </div>
 <div class="form-group">
  
  <%= text_field_tag :phone_no, nil, :required => false, :placeholder => 'phone no'%>
 </div>
 
<%= submit_tag 'Next', class: "btn btn-primary"%>
<%end%>
</div>
</div>
</div>