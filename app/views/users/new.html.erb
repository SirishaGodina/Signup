<div class="container h-100" style="background-color:powderblue;">
<div class="row h-100 justify-content-center align-items-center">
<div class="col-10 col-md-8 col-lg-6">
<h2> Create Account</h2>
<% if(@user != nil) %>
<% if @user.errors.any? %>
  <div class="alert alert-warning">
  
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% end %>
<%=form_tag '/users/create', method: :post do%>
 
 <div class="form-group">
  
  <%= text_field_tag :email, nil, :required => true, :placeholder => 'email'%>
 </div>
 <div class="form-group">
 
  <%= password_field_tag :password, nil, :required => true, :placeholder => 'password'%>
 </div>
 <div class="form-group">
 
  <%= password_field_tag :password_confirmation, nil, :required => true, :placeholder => 'password confirmation'%>
 </div>
 
<%= submit_tag 'Sign Up', class: "btn btn-primary"%>
<%end%>
</div>
</div>
</div>